<!DOCTYPE html>
<html lang="tr">
<head>
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<title>@ViewData["Title"] -  Organizasyon Şeması</title>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<link rel="stylesheet" href="~/veri_y.styles.css" asp-append-version="true" />

<style>
body {
font-family: 'Arial', sans-serif;
background-color: #f9f9f9;
margin: 0;
padding: 0;
}

.navbar {
background-color: #2C3E50;
color: white;
padding: 10px 20px;
}

.navbar h1 {
margin: 0;
font-size: 28px;
}

.main-container {
display: flex;
width: 100%;
padding: 30px;
box-sizing: border-box;
}

.sidebar {
width: 25%;
background-color: #34495E;
padding: 20px;
box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
border-radius: 8px;
color: white;
margin-right: 20px;
}

.sidebar h2 {
color: white;
margin-bottom: 20px;
}

.sidebar button {
width: 100%;
margin-bottom: 10px;
font-size: 16px;
border-radius: 8px;
border: none;
color: white;
background-color: #2C3E50;
transition: background-color 0.3s;
}

.sidebar button:hover {
background-color: #1ABC9C;
color: #ffffff;
border: 1px solid #148f77;
transition: background-color 0.3s, color 0.3s, border 0.3s;
}


.form-container {
width: 35%;
background-color: white;
padding: 20px;
box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
border-radius: 8px;
}

.form-group {
margin-bottom: 15px;
}

.form-control {
border-radius: 8px;
padding: 10px;
border: 1px solid #ddd;
}

button {
background-color: #2C3E50;
color: white;
padding: 12px;
border: none;
width: 100%;
border-radius: 8px;
transition: background-color 0.3s;
}

button:hover {
background-color: #1ABC9C;
color: #ffffff;
border: 1px solid #148f77;
transition: background-color 0.3s, color 0.3s, border 0.3s;
}

.content-area {
width: 40%;
padding-left: 20px;
}
</style>
</head>
<body>
<header>
<nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
<div class="container">
<a class="navbar-brand text-dark" asp-controller="Home" asp-action="Index">X Şirketi</a><button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
<span class="navbar-toggler-icon"></span>
</button>
<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
<ul class="navbar-nav flex-grow-1">
<li class="nav-item"><a class="nav-link text-dark" asp-controller="Home" asp-action="insan_k">İnsan Kaynakları</a></li>
<li class="nav-item"><a class="nav-link text-dark" asp-controller="Home" asp-action="bilgi_t">BT</a></li>
<li class="nav-item"><a class="nav-link text-dark" asp-controller="Home" asp-action="satis_d">Satış</a></li>
<li class="nav-item"><a class="nav-link text-dark" asp-controller="Home" asp-action="pazarlama_d">Pazarlama</a></li>
<li class="nav-item"><a class="nav-link text-dark" asp-controller="Home" asp-action="finans">Finans</a></li>
</ul>
</div>
</div>
</nav>
</header>

<div class="main-container">
<!-- Sol Menü -->
<div class="sidebar">
<h2>İşlemler</h2>
<form id="actions-form">
<button type="button" id="add-employee-btn">Çalışan Ekle</button>
<button type="button" id="delete-employee-btn">Çalışan Sil</button>
<button type="button" id="update-employee-btn">Çalışan Güncelle</button>
<button type="button" id="search-employee-btn">Çalışan Ara</button>
<button type="button" id="add-department-btn">Yeni Departman Ekle</button>
</form>
</div>

<!-- Dinamik Form Alanı -->
<div class="form-container">
<div id="form-container-content">
<!-- İlk form buraya gelir -->
<h2>Çalışan Ekle</h2>
<form id="employee-form">
<div class="form-group">
<label for="name">Ad:</label>
<input type="text" id="name" class="form-control" required>
</div>
<div class="form-group">
<label for="surname">Soyad:</label>
<input type="text" id="surname" class="form-control" required>
</div>
<div class="form-group">
<label for="department">Eklenecek Departman:</label>
<select id="department" class="form-control" required>
<option>Bilgi Teknolojileri</option>
<option>Finans</option>
<option>İnsan Kaynakları</option>
<option>Pazarlama</option>
<option>Satış</option>
</select>
</div>
<div class="form-group">
<label for="role">Görevi:</label>
<select id="role" class="form-control" required>
<option>Çalışan</option>
<option>Yönetici</option>
</select>
</div>
<button type="submit">Çalışan Ekle</button>
</form>
</div>
</div>

<!-- Sağ İçerik -->
<div class="content-area">
    @RenderBody()
    @RenderSection("RightContent", required: false)


<footer class="border-top footer text-muted mt-4">
<div class="container">
&copy; 2025 - veri_y - <a asp-page="/Privacy">Privacy</a>
</div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

@await RenderSectionAsync("Scripts", required: false)

<script>
document.getElementById('add-employee-btn').addEventListener('click', function () {
document.getElementById('form-container-content').innerHTML = `
<h2>Çalışan Ekle</h2>
<form id="employee-form">
<div class="form-group">
<label for="name">Ad:</label>
<input type="text" id="name" class="form-control" required>
</div>
<div class="form-group">
<label for="surname">Soyad:</label>
<input type="text" id="surname" class="form-control" required>
</div>
<div class="form-group">
<label for="department">Eklenecek Departman:</label>
<select id="department" class="form-control" required>
<option>Bilgi Teknolojileri</option>
<option>Finans</option>
<option>İnsan Kaynakları</option>
<option>Pazarlama</option>
<option>Satış</option>
</select>
</div>
<div class="form-group">
<label for="role">Görevi:</label>
<select id="role" class="form-control" required>
<option>Çalışan</option>
<option>Yönetici</option>
</select>
</div>
<button type="submit">Çalışan Ekle</button>
</form>
`;
});

document.getElementById('delete-employee-btn').addEventListener('click', function () {
document.getElementById('form-container-content').innerHTML = `
<h2>Çalışan Sil</h2>
<form id="delete-form">
<div class="form-group">
<label for="delete-from-department">Departman:</label>
<select id="delete-from-department" class="form-control" required>
<option>Bilgi Teknolojileri</option>
<option>Finans</option>
<option>İnsan Kaynakları</option>
<option>Pazarlama</option>
<option>Satış</option>
</select>
</div>
<div class="form-group">
<label for="delete-fullname">Ad Soyad:</label>
<input type="text" id="delete-fullname" class="form-control" required>
</div>
<button type="submit">Çalışanı Sil</button>
</form>
`;
});

document.getElementById('update-employee-btn').addEventListener('click', function () {
document.getElementById('form-container-content').innerHTML = `
<h2>Çalışan Güncelle</h2>
<form id="update-form">
<div class="form-group">
<label for="update-fullname">Ad Soyad:</label>
<input type="text" id="update-fullname" class="form-control" required>
</div>
<div class="form-group">
<label for="update-role">Yeni Görev:</label>
<select id="update-role" class="form-control" required>
<option>Çalışan</option>
<option>Yönetici</option>
</select>
</div>
<button type="submit">Güncelle</button>
</form>
`;
});

document.getElementById('search-employee-btn').addEventListener('click', function () {
document.getElementById('form-container-content').innerHTML = `
<h2>Çalışan Ara</h2>
<form id="search-form">
<div class="form-group">
<label for="search-fullname">Ad Soyad:</label>
<input type="text" id="search-fullname" class="form-control" required>
</div>
<button type="button" id="search-employee-submit">Çalışanı Bul</button>
<div class="form-group" style="margin-top: 20px;">
<label for="found-department">Bulunan Departman:</label>
<input type="text" id="found-department" class="form-control" readonly>
</div>
</form>
`;
});

document.getElementById('add-department-btn').addEventListener('click', function () {
document.getElementById('form-container-content').innerHTML = `
<h2>Yeni Departman Ekle</h2>
<form id="add-department-form">
<div class="form-group">
<label for="new-department">Departman Adı:</label>
<input type="text" id="new-department" class="form-control" required>
</div>
<button type="submit">Departman Ekle</button>
</form>
`;
});
</script>
</body>
</html>